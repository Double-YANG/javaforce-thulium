<project name="rdp" default="jar" basedir=".">
  <description>rdp</description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="classpath" location="javaforce.jar"/>
  <property name="version" value="0.1"/>

  <target name="depjars">
    <jar destfile="javaforce.jar">
      <zipfileset src="../../jars/javaforce.jar"/>
      <manifest>
        <attribute name="Trusted-Library" value="true"/>
        <attribute name="Permissions" value="all-permissions"/>
        <attribute name="Codebase" value="jrdp.sourceforge.net"/>
      </manifest>
    </jar>
    <jar destfile="jna.jar">
      <zipfileset src="../../jars/jna.jar"/>
      <manifest>
        <attribute name="Trusted-Library" value="true"/>
        <attribute name="Permissions" value="all-permissions"/>
        <attribute name="Codebase" value="jfaudio.sourceforge.net"/>
      </manifest>
    </jar>
  </target>

  <target name="compile" depends="depjars" description="compile the source">
    <!-- Compile the java code from ${src} into ${build} -->
    <mkdir dir="${build}"/>
    <javac srcdir="${src}" destdir="${build}" target="1.6" source="1.6" debug="true" includeantruntime="false">
      <classpath path="${classpath}"/>
    </javac>
  </target>

  <target name="jar" depends="compile" description="build jar file">
    <!-- Build jar file from class files -->
    <jar destfile="jrdp-server.jar" includes="server/*.class" basedir="${build}">
      <fileset dir="." includes="*.png"/>
      <manifest>
        <attribute name="Main-Class" value="server.Server"/>
      </manifest>
    </jar>
    <jar destfile="jrdp-client.jar" includes="client/*.class" basedir="${build}">
      <fileset dir="." includes="*.png"/>
      <manifest>
        <attribute name="Main-Class" value="client.Client"/>
      </manifest>
    </jar>
  </target>

  <!-- Requires WiX toolset in PATH -->
  <target name="msi" depends="jar" description="create windows installer">
    <exec command="i686-w64-mingw32-windres -O coff -i jrdp.rc -o jrdp.res"/>
    <exec command="i686-w64-mingw32-gcc loader-server.c -I../../include -Wl,-subsystem,windows jrdp.res -o jfrdp32.exe"/>
    <exec command="x86_64-w64-mingw32-windres -O coff -i jrdp.rc -o jrdp.res"/>
    <exec command="x86_64-w64-mingw32-gcc loader-server.c -I../../include -Wl,-subsystem,windows jrdp.res -o jfrdp64.exe"/>
    <exec command="candle -o wix.obj wix-server.xml"/>
    <exec command="light -o jfrdp-server-${version}.msi wix.obj"/>
    <move file="jfrdp-server-${version}.msi" todir="/home/pquiring/zips"/>

    <exec command="i686-w64-mingw32-windres -O coff -i jrdp.rc -o jrdp.res"/>
    <exec command="i686-w64-mingw32-gcc loader-client.c -I../../include -Wl,-subsystem,windows jrdp.res -o jfrdp32.exe"/>
    <exec command="x86_64-w64-mingw32-windres -O coff -i jrdp.rc -o jrdp.res"/>
    <exec command="x86_64-w64-mingw32-gcc loader-client.c -I../../include -Wl,-subsystem,windows jrdp.res -o jfrdp64.exe"/>
    <exec command="candle -o wix.obj wix-client.xml"/>
    <exec command="light -o jfrdp-client-${version}.msi wix.obj"/>
    <move file="jfrdp-client-${version}.msi" todir="/home/pquiring/zips"/>
  </target>

  <target name="release-bin" depends="jar" description="create release zip file">
    <copy file="../../license.txt" todir="."/>
    <zip destfile="jfrdp-${version}.zip">
      <fileset dir="..">
        <include name="jrdp/*.jar"/>
        <include name="jrdp/*.txt"/>
        <include name="jrdp/run*.bat"/>
      </fileset>
    </zip>
    <move file="jfrdp-${version}.zip" todir="/home/pquiring/zips"/>
  </target>

  <target name="release-src" depends="" description="create release zip file">
    <zip destfile="jfrdp-src-${version}.zip">
      <fileset dir="../../..">
        <include name="jf/license.txt"/>
        <include name="jf/projects/jrdp/src/**/*.java"/>
        <include name="jf/projects/jrdp/src/**/*.form"/>
        <include name="jf/projects/jrdp/*.c"/>
        <include name="jf/projects/jrdp/*.txt"/>
        <include name="jf/projects/jrdp/*.xml"/>
        <include name="jf/projects/jrdp/*.png"/>
        <include name="jf/projects/jrdp/*.ico"/>
        <include name="jf/projects/jrdp/*.rc"/>
        <include name="jf/projects/jrdp/run*.bat"/>
        <include name="jf/projects/jrdp/nbproject/*.xml"/>
        <include name="jf/jars/javaforce.jar"/>
        <include name="jf/jars/jna.jar"/>
        <include name="jf/include/*.h"/>
      </fileset>
    </zip>
    <move file="jfrdp-src-${version}.zip" todir="/home/pquiring/zips"/>
  </target>

  <target name="clean" description="deletes compiled files">
    <delete>
      <fileset dir="." includes="**/*.class"/>
      <fileset dir="." includes="**/p*.jar"/>
      <fileset dir="." includes="**/*.war"/>
    </delete>
  </target>
</project>
